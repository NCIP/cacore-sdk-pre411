<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<!-- Used only by the client and not the server components -->
	<bean id="ServiceInfo" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<entry key="APPLICATION_SERVICE_BEAN" value="applicationService" />
				<entry key="AUTHENTICATION_SERVICE_BEAN" value-ref="authenticationManager"/>
			</map>
		</constructor-arg>
	</bean>
	
	<bean id="interceptor" class="gov.nih.nci.system.client.proxy.ApplicationServiceProxy" singleton="false">
		<property name="proxyFactory">
			<bean class="gov.nih.nci.system.client.proxy.ProxyHelperImpl" singleton="false"/>
		</property>
	</bean>
	
	<bean id="applicationService" class="org.springframework.aop.framework.ProxyFactoryBean" singleton="false">
		<property name="target">
			<ref bean="ApplicationServiceImpl"/>
		</property>
		<property name="interceptorNames" value="interceptor"/>
		<property name="interfaces" value="gov.nih.nci.system.applicationservice.ApplicationService"/>
	</bean>	
	
	<bean id="authenticationManager" class="org.acegisecurity.providers.rcp.RemoteAuthenticationProvider">
		<property name="remoteAuthenticationManager">
			<bean class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
			    <property name="serviceUrl" value="http://localhost:8080/server1/http/remoteAuthenticationManager"/>
			    <property name="serviceInterface" value="org.acegisecurity.providers.rcp.RemoteAuthenticationManager"/>
			</bean>
		</property>
	</bean>
	

	<bean name="ApplicationServiceImpl" class="gov.nih.nci.system.applicationservice.impl.ApplicationServiceImpl" singleton="true">
		<constructor-arg ref="ClassCache" index="0"></constructor-arg>
		<constructor-arg ref="SystemProperties" index="1"></constructor-arg>		
	</bean>

	<!-- Bean Definitions -->
	<bean name="ClassCache" class="gov.nih.nci.system.util.ClassCache" singleton="true">
		<property name="daoList">
			<list>
				<ref bean="ORMDAOFactory"/>					
			</list>
		</property>		
	</bean>
		
	<bean name="ORMDAOFactory" class="gov.nih.nci.system.dao.orm.ORMDAOFactoryBean">
		<constructor-arg value="hibernate.cfg.xml"></constructor-arg> <!-- configLocation -->
		<constructor-arg ref="SystemProperties"></constructor-arg>
	</bean>
	
	<bean name="SystemProperties" class="java.util.Properties">
		<constructor-arg>
			<props>
				<prop key="caseSensitive">false</prop>
				<prop key="configLocation">hibernate.cfg.xml</prop>
				<prop key="resultCountPerQuery">5000</prop>
				<prop key="resultOutputFormatter">resultOutputFormatter.xsl</prop>
				<prop key="rowCounter">200</prop>
			</props>
		</constructor-arg>
	</bean>
	
</beans>