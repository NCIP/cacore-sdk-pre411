<beans default-lazy-init="false" default-dependency-check="none" default-autowire="no">

	<bean name="ApplicationServiceImpl" class="gov.nih.nci.system.applicationservice.impl.ApplicationServiceImpl" singleton="false">
		<constructor-arg ref="ClassCache"></constructor-arg>
	</bean>

