	<!-- Bean Definitions -->
	<bean name="ClassCache" class="gov.nih.nci.system.util.ClassCache" singleton="true">
		<property name="daoList">
			<list>
				<!--  Add any DAO's here -->
				<ref bean="ORMDAO"/>					
			</list>
		</property>		
	</bean>
		
	<bean name="ORMDAO" class="gov.nih.nci.system.dao.orm.DAOFactoryBean">
		<constructor-arg value="hibernate.cfg.xml"></constructor-arg> <!-- configLocation -->
		<constructor-arg value="false" index="1"></constructor-arg>  <!-- caseSensitive -->
		<constructor-arg value="5000" index="2"></constructor-arg>	<!-- resultCountPerQuery -->			
	</bean>
	
</beans>